<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Notification"
    android:theme="@style/AppTheme2"
    android:outlineAmbientShadowColor="@color/primary_dark">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginTop="30dp"
        android:background="#d7d7d5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/primary_dark"
            android:textSize="40dp"/>



        <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textStyle="italic"
        android:gravity="center"
        android:text="Daily Notification Not Set"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:text="Click ON"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="30dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Start Notification" />
        <Button
        android:id="@+id/start_BTN"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white_greyish"
        android:background="@color/primary_darker"
        android:layout_width="match_parent"
            android:layout_height="60dp"
        android:text="Start Notification "/>
    <Button
        android:id="@+id/buttton2"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="60dp"
        android:background="@color/primary_darker"
        android:text="CHANGE NOTIFICATION TIME"
        android:textColor="@color/white_greyish"/>

        <Button
            android:id="@+id/stop_BTN"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="STOP NOTIFICATION"
            android:background="@color/primary_darker"
            android:textColor="@color/white_greyish" />
    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="60dp"
        android:text="BACK"
        android:background="@color/primary_darker"
        android:textColor="@color/white_greyish"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40dp"/>



</LinearLayout>
</LinearLayout>